---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const isDate = !isNaN(date.getTime())
console.log(date,isDate)
---

{
isDate? (
<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("zh-cn", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
):<!--
invalide date {date}
-->
}
