---
import { Typst as Typ } from 'astro-typst/src/components';

export type Props = {
  code: string;
};

const code = Astro.props.code;

const transform = (code: string): string => {
  return `
#set page(height: auto, width: auto, margin: 0pt)

#v(0.2em)
${code}
`;
};
---

<div class="w-fit mx-auto">
  <Typ code={transform(code)} />
</div>
